<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NewsBlog</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/src/jquery.unobtrusive-ajax.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.6.10/vue.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/lib/vue-tables-2/dist/vue-tables-2.min.js"></script>
    <script src="~/js/admin.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/Home">NewsBlog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse show" id="navbarsExample04" style="">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#"> <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item pr-2">
                        <a class="btn btn-info" href="/Home">На главную</a>
                    </li>

                </ul>

                @if (User.Identity.IsAuthenticated)
                {
                    <p>@User.Identity.Name</p>

                    <form method="post" asp-area="Admin" asp-controller="Account" asp-action="LogOff">
                        <input type="submit" value="Выход" />
                    </form>
                }
                else
                {
                    <a asp-area="Admin" asp-controller="Account" asp-action="Login">Вход</a>
                    <a asp-area="Admin" asp-controller="Account" asp-action="Register">Регистрация</a>
                }
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            @if (DateTime.Now.Year == 2019)
            {
                <span class="text-muted">&copy; 2019 - NewsBlog</span>
            }
            else
            {
                <span class="text-muted">&copy; 2019 - @DateTime.Now.Year - NewsBlog</span>
            }
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
